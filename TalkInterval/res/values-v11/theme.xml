<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TalkingIntervalTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar"></style>

    <style name="MyButton">
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MyButton.White">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TalkingIntervalDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
    </style>

    <!-- Text Styles -->

    <style name="TextAppearance"></style>

    <style name="TextAppearance.TalkingInterval" parent="TextAppearance"></style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/DialogWindowTitleAppearance</item>
    </style>

    <style name="DialogWindowTitleAppearance">
        <item name="android:textColor">#00ff00</item>
    </style>

    <style name="DialogWindowText">
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>